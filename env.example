# Commcomm Application - Frontend Environment Variables
# Copy this file to .env and update the values

# ===========================================
# API CONFIGURATION
# ===========================================
# Backend API URL
# For development:
REACT_APP_API_URL=http://localhost:3001/api

# For production, use your domain:
# REACT_APP_API_URL=https://your-domain.com/api

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Application name
REACT_APP_NAME="Commcomm Application"

# Application version
REACT_APP_VERSION="1.0.0"

# Environment (development, production, test)
REACT_APP_ENV=development

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable debug mode
REACT_APP_DEBUG=false

# Enable development tools
REACT_APP_DEV_TOOLS=false

# Enable analytics
REACT_APP_ANALYTICS=false

# Enable error reporting
REACT_APP_ERROR_REPORTING=false

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Enable security features
REACT_APP_ENABLE_SECURITY=true

# Enable anti-bot protection
REACT_APP_ANTI_BOT=true

# Enable developer tools blocking
REACT_APP_BLOCK_DEV_TOOLS=true

# ===========================================
# UI CONFIGURATION
# ===========================================
# Default language (de, en)
REACT_APP_DEFAULT_LANGUAGE=de

# Enable language selector
REACT_APP_ENABLE_LANGUAGE_SELECTOR=true

# Theme (light, dark, auto)
REACT_APP_THEME=light

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# Maximum file size in bytes (10MB = 10485760 bytes)
REACT_APP_MAX_FILE_SIZE=10485760

# Allowed file types
REACT_APP_ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp"

# ===========================================
# ADMIN PANEL CONFIGURATION
# ===========================================
# Enable admin panel
REACT_APP_ENABLE_ADMIN=true

# Admin panel path
REACT_APP_ADMIN_PATH="/admin"

# Auto-refresh interval in seconds
REACT_APP_AUTO_REFRESH_INTERVAL=30

# ===========================================
# MONITORING CONFIGURATION
# ===========================================
# Enable performance monitoring
REACT_APP_PERFORMANCE_MONITORING=false

# Enable error tracking
REACT_APP_ERROR_TRACKING=false

# Analytics tracking ID (if using Google Analytics)
# REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
# Enable React DevTools
REACT_APP_DEV_TOOLS=false

# Enable Redux DevTools
REACT_APP_REDUX_DEV_TOOLS=false

# Enable API mocking
REACT_APP_MOCK_API=false

# ===========================================
# PRODUCTION SETTINGS
# ===========================================
# Uncomment and configure for production

# CDN URL for static assets
# REACT_APP_CDN_URL=https://cdn.your-domain.com

# Public URL
# REACT_APP_PUBLIC_URL=https://your-domain.com

# API timeout in milliseconds
REACT_APP_API_TIMEOUT=30000

# ===========================================
# NOTES
# ===========================================
# 1. All environment variables must start with REACT_APP_
# 2. Never commit the actual .env file to version control
# 3. Update API URLs for production deployment
# 4. Configure feature flags based on environment
# 5. Test all configurations before deployment
